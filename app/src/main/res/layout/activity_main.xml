<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0c0717"
        tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="125dp"
        android:layout_height="115dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:contentDescription="@string/mod_item_1"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vanced_logo" />
    <TextView
            android:layout_width="150dp"
            android:layout_height="26dp"
            android:id="@+id/textView2" android:fontFamily="@font/roboto"
            android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
            android:typeface="normal" android:textAlignment="textStart"
            android:textColor="@android:color/darker_gray" android:text="@string/mod_item_1"
            android:lineSpacingExtra="8sp" android:textAllCaps="false"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/editText"
        android:layout_width="203dp"
        android:layout_height="74dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:fontFamily="@font/roboto"
        android:inputType="textMultiLine"
        android:maxLines="20"
        android:text="@string/Youtube_vanced_description"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView" />
</androidx.constraintlayout.widget.ConstraintLayout>
