<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0c0717"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="125dp"
            android:layout_height="115dp" app:srcCompat="@drawable/vanced_logo"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" android:contentDescription="@string/mod_item_1"
            android:scaleType="centerInside" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="218dp"
            android:layout_height="38dp"
            android:id="@+id/textView2" android:fontFamily="@font/roboto"
            android:layout_marginTop="68dp" app:layout_constraintTop_toTopOf="parent" android:textSize="28sp"
            android:typeface="normal" android:textAlignment="center"
            android:textColor="@android:color/darker_gray" android:text="@string/mod_item_1"
            android:lineSpacingExtra="8sp" android:textAllCaps="false"
            app:layout_constraintStart_toEndOf="@+id/imageView" android:layout_marginStart="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
